{
  "name": "eventos-backend",
  "private": true,
  "version": "0.2.0",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "start": "npm run build && node dist/main.js",
    "dev": "tsx watch src/main.ts",
    "test": "xvfb-run -a cypress run --config-file cypress.config.ts",
    "test:watch": "xvfb-run -a cypress open --config-file cypress.config.ts",
    "test:coverage": "c8 --all --src src --exclude tests-cypress/** --exclude dist/** --reporter=text-summary --reporter=lcov --reporter=json-summary tsx tests-cypress/runCoverage.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "googleapis": "^144.0.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.10",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "@babel/core": "^7.29.0",
    "@babel/preset-env": "^7.29.0",
    "@babel/preset-typescript": "^7.28.5",
    "@cypress/code-coverage": "^4.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/chai": "^5.0.0",
    "typescript": "^5.6.3"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "dist/**",
      "tests-cypress/**"
    ],
    "report-dir": "coverage",
    "temp-dir": ".nyc_output"
  }
}
